<div class="container mx-auto grid grid-cols-12 relative space-y-10">
    {% if entry.stickyBlocksHeader %}
        <div class="w-fit absolute 2xl:left-28 xl:left-24 left-8 top-[50px] border border-white inline text-md font-medium tracking-tighter text-white px-4 py-4 rounded-md mb-12">
            {{ entry.stickyBlocksHeader }}
        </div>
    {% endif %}
    {% for block in entry.stickyBlocks.all() %}
        <!-- Text Container -->
        <div class="grid col-span-6 grid-cols-subgrid">
            <div class="col-span-6 grid grid-cols-subgrid text-white self-center">
                <span class="col-span-6 row-start-1 text-xl font-medium mb-2 tracking-tighter">
                    0{{ loop.index }}
                </span>
                <h2 class="col-span-6 row-start-2 text-6xl mb-8">
                    {{ block.title }}
                </h2>
                <h3 class="col-span-3 row-start-3 text-3xl mb-4">
                    {{ block.subtitle }}
                </h3>
                <div class="col-span-4">
                    {{ block.text }}
                </div>
            </div>
        </div>

        <!-- Image Container -->
        <div class="col-span-6 sticky-image sticky top-40">
            <div class="image-container rounded-xl overflow-hidden">
                {% if block.asset|length %}
                    {% include '_includes/_blocks/asset' with {
                        ratio: '1:1',
                        asset: block.asset.one()
                    } %}
                {% endif %}
            </div>
        </div>
    {% endfor %}
</div>