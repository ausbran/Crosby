{% set height = height ?? '1/2' %}
{% set zIndex = zIndex ?? '1' %}
{% set class = class ?? null %}
{% set blur = blur ?? 'md' %}
{% set hoverOpacity = hoverOpacity ?? '100' %}
{% set gradientStop = gradientStop ?? '90' %}
{% set direction = direction ?? 'to_bottom' %}

<div class="{{ class }} absolute inset-0 top-auto bottom-0 h-{{ height }} backdrop-blur-{{ blur }} [mask:linear-gradient({{ direction }},rgba(0,0,0,0)_0%,rgba(0,0,0,1)_{{ gradientStop }}%,rgba(0,0,0,1)_100%)] transition-opacity duration-300 group-hover:opacity-{{ hoverOpacity }} z-{{ zIndex }}"></div>