{% set bodyClass = (entry.color ?? '') ~ ' bg-texture overflow-hidden max-w-screen' %}
{% set footerClass = '!mt-0' %}

{% block content %}
	{% if entry.asset|length %}
		{% include '_includes/_blocks/bannerSlides' with {
            block: entry,
            backgroundClass: 'scale-up transform-all duration-100 mt-12',
            h1Class: 'col-span-12 xl:col-span-10'
        } %}
	{% endif %}

	{% include '_includes/_blocks/stickyBlocks' with {
        stickyBlocks: entry.stickyBlocks.all()
    } %}

	{% include '_includes/_blocks/form' with {
        formHandle: 'contactGeneral',
        block: entry,
        class: 'py-8 md:py-12 lg:py-16 xl:py-20' 
    } %}
{% endblock %}
