{% extends "index" %}

{% block content %}
    {% if entry.asset|length %}
        {% include '_includes/_blocks/landingImages' with {
            block: entry,
            maxWidth: entry.topMaxWidth
        } %}
    {% else %}
        <p class="error-text">No images selected.</p>
    {% endif %}

    {% include '_includes/_blocks/slider' with { 
        slides: entry.slides.all(), 
        height: entry.slideHeight, 
        slideHeader: entry.slideHeader,
        slidesVisible: entry.slidesVisible, 
        slideTemplate: '_includes/_blocks/slideCompany',
        fadeIn: true
    } %}
{% endblock %}
