{% extends "index" %}
{% set bodyClass = entry.color ?? '' %}

{% block content %}
    {% if entry.asset|length %}
        {% include '_includes/_blocks/landingImages' with {
            block: entry,
            maxWidth: entry.topMaxWidth
        } %}
    {% else %}
        <p class="error-text">No images selected.</p>
    {% endif %}

    {% include '_includes/_blocks/services' %}

    {% include '_includes/_blocks/testimonials' %}

    {% include '_includes/_blocks/form' with {
        formHandle: 'contactCRM'
    } %}
{% endblock %}