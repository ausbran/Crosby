{% import "_includes/forms" as forms %}

{% set baseUrl = "seomatic/#{controllerHandle}#{siteHandleUri}" %}

{% if typeMenu | length %}
    <div id="types-btn" class="btn menubtn"
         style="width: auto; padding-left: 20px; padding-right: 20px; margin-right: 10px;">{{ currentType }}</div>

    <div class="menu">
        <ul class="padded">
            {% for id,name in typeMenu %}
                <li>
                    {% if id == currentTypeId %}
                        <a class="sel">
                            {{ name }}
                        </a>
                    {% else %}
                        {% set params = {
                            'typeId': id
                        } %}
                        {% set url = url(baseUrl, params) %}
                        <a href="{{ url }}">
                            {{ name }}
                        </a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
